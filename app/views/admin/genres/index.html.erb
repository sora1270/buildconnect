<div class="container mt-5">
  <div class="row mb-4">
    <div class="col text-center">
      <h4 class="p-3 bg-light rounded">業種一覧</h4>
    </div>
  </div>

  <div class="row mb-4 justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @genre, url: admin_genres_path, local: true, class: "form-inline justify-content-center" do |f| %>
        <div class="form-group mb-2 text-center">
          <%= f.label :name, "ジャンル名", class: "sr-only" %>
          <%= f.text_field :name, placeholder: 'ジャンル名', class: "form-control mr-2" %>
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">ジャンル</th>
              <th scope="col" class="text-center">編集</th>
              <th scope="col" class="text-center">削除</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td class="text-center">
                  <%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %>
                </td>
                <td class="text-center">
                  <%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>