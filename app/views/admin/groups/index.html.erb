<div class="container mt-5">
  <h1 class="text-center mb-4">グループ一覧</h1>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">名前</th>
          <th scope="col">アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= link_to group.name, admin_group_path(group), class: 'text-primary' %></td>
            <td>
              <%= link_to '編集', edit_admin_group_path(group), class: 'btn btn-primary btn-sm' %>
              <%= link_to '削除', admin_group_path(group), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>