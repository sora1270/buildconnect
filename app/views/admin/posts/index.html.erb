<div class="container mt-5">
  <h1 class="text-center mb-4">投稿一覧</h1>
  <div class="row">
    <div class="col-md-12">
      <% if @posts.any? %>
        <table class="table table-bordered table-striped">
          <thead class="thead-dark">
            <tr>
              <th>タイトル</th>
              <th>作成者</th>
              <th>作成日</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.user.full_name %></td>
                <td><%= post.created_at.strftime('%Y-%m-%d') %></td>
                <td>
                  <%= link_to '詳細', admin_post_path(post), class: 'btn btn-primary btn-sm' %>
                  <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">投稿はありません。</p>
      <% end %>
    </div>
  </div>
</div>