<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h3>管理者ログイン</h3>
        </div>
        <div class="card-body">
          <%= form_for(:admin, url: admin_session_path, html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス', required: true %>
              <div class="invalid-feedback">
                メールアドレスは必須です。
              </div>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', required: true %>
              <div class="invalid-feedback">
                パスワードは必須です。
              </div>
            </div>

            <div class="form-group text-center">
              <%= f.submit 'ログイン', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>