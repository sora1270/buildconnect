<div class="container mt-5">
  <h1 class="text-center mb-4">パスワードリセット</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h3>パスワードをお忘れですか？</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'メールアドレス', required: true %>
              <div class="invalid-feedback">
                メールアドレスは必須です。
              </div>
            </div>

            <div class="form-group text-center">
              <%= f.submit "リセットパスワードの指示を送信", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to 'ログインに戻る', new_user_session_path, class: 'text-muted' %>
        </div>
      </div>
    </div>
  </div>
</div>