<div class="container mt-5">
  <!-- 通知エリア -->
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  </div>

  <p id="notice"><%= flash[:notice] %></p>

  <h3 class="mb-4">新規会員登録</h3>

  <!-- フォーム開始 -->
  <%= form_with(model: @user, url: user_registration_path, local: true) do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">名前</label>
      <div class="col-sm-5 mb-3">
        <%= f.label :last_name, "姓", class: "form-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-sm-5 mb-3">
        <%= f.label :first_name, "名", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">フリガナ</label>
      <div class="col-sm-5 mb-3">
        <%= f.label :last_name_kana, "セイ", class: "form-label" %>
        <%= f.text_field :last_name_kana, pattern: "[ァ-ヶー－]+", class: "form-control" %>
      </div>
      <div class="col-sm-5 mb-3">
        <%= f.label :first_name_kana, "メイ", class: "form-label" %>
        <%= f.text_field :first_name_kana, pattern: "[ァ-ヶー－]+", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :email, "メールアドレス" %></label>
      <div class="col-sm-10 mb-3">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></label>
      <div class="col-sm-10 mb-3">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :company_name, "企業名" %></label>
      <div class="col-sm-10 mb-3">
        <%= f.text_field :company_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :industry, "業種" %></label>
      <div class="col-sm-10 mb-3">
        <%= f.collection_select :industry, Genre.all, :name, :name, { include_blank: '選択してください' }, { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :password, "パスワード(6文字以上)" %></label>
      <div class="col-sm-10 mb-3">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :password_confirmation, "パスワード(確認用)" %></label>
      <div class="col-sm-10 mb-3">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "新規登録", class: "btn btn-lg btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>