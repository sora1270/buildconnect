<div class="container mt-5">
  <h1 class="my-4 text-center">参加中ユーザー</h1>
  
  <% if @memberships.any? %>
    <div class="list-group">
      <% @memberships.each do |membership| %>
        <a href="<%= user_path(membership.user) %>" class="list-group-item list-group-item-action">
          <h5 class="mb-1"><%= membership.user.full_name %></h5>
          <small><%= membership.user.email %></small>
        </a>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      参加中のユーザーはいません。
    </div>
  <% end %>
</div>