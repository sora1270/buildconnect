<div class="container mt-5">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-10 pl-5">
      <h4 class="mt-3"><strong>新着投稿</strong></h4>
      <div class="row">
        <% if @posts.any? %>
          <% @posts.each do |post| %>
            <div class="col mt-3">
              <%= link_to post_path(post) do %>
                <p><%= post.name %></p>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="col mt-3">
            <p>投稿がありません。</p>
          </div>
        <% end %>
      </div>

      <div class="mb-3 text-right">
        <%= link_to "全ての投稿を見る＞", posts_path %>
      </div>
    </div>
  </div>
</div>