<header class="bg-primary text-white py-3">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- ロゴ -->
    <a href="/" class="text-white text-decoration-none">
      <%= image_tag("buildconnect.png", class: "card-img", size: "450x300") %>
    </a>

    <!-- ナビゲーションメニュー -->
    <nav class="d-flex align-items-center">
      <ul class="nav">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link text-white" do %>
            ホーム
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to mypage_users_path, class: "nav-link text-white" do %>
            マイページ
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to posts_path, class: "nav-link text-white" do %>
            仕事を探す
          <% end %>
        </li>
      </ul>

      <!-- ログイン・サインアップリンク -->
      <ul class="nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
              ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link text-white" do %>
              ログイン
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
              新規登録
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>