<h1 class="text-center">投稿編集</h1>

<%= form_with model: @post, local: true do |form| %>
  <div class="col-md-5 col-sm-10 mx-auto rounded px-0 my-5">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="col-md-5 col-sm-10 mx-auto rounded px-0 my-5">
    <%= form.label :genre_ids, "必要業種" %>
    <div class="form-check">
      <%= form.collection_check_boxes :genre_ids, @genres, :id, :name do |b| %>
        <div class="form-check">
          <%= b.check_box(class: "form-check-input") %>
          <%= b.label(class: "form-check-label") do %>
            <%= b.object.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="col-md-5 col-sm-10 mx-auto rounded px-0 my-5">
    <%= form.label :duration, "期間" %>
    <%= form.text_field :duration, class: "form-control" %>
  </div>
  
  <div class="col-md-5 col-sm-10 mx-auto rounded px-0 my-5">
    <%= form.label :location, "場所" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>
  
  <div class="col-md-5 col-sm-10 mx-auto rounded px-0 my-5">
    <%= form.label :contact_info, "連絡先" %>
    <%= form.email_field :contact_info, class: "form-control", placeholder: "name@example.com" %>
  </div>
  
  <div class="col-md-5 col-sm-10 mx-auto rounded px-0 my-5">
    <%= form.label :content, "概要" %>
    <%= form.text_area :content, class: "form-control", style: "height: 200px;" %>
  </div>
  
  <div class="text-center my-5">
    <%= form.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>