<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center">協力業者募集</h1>

      <div class="button-container text-center mb-4">
        <%= link_to "新しい投稿", new_post_path, class: "link-button btn btn-primary" %>
      </div>

      <ul class="list-group">
        <% @posts.each do |post| %>
          <li class="list-group-item mb-3">
            <h4><%= link_to post.title, post_path(post) %></h4>
            <ul class="list-unstyled">
              <div class="card-body text-muted">
                <li><strong>募集業種:</strong> <%= post.industry %></li>
                <li><strong>期間:</strong> <%= post.duration %></li>
                <li><strong>場所:</strong> <%= post.location %></li>
              </div>
            </ul>
            <span>
              <small><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
            </span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>