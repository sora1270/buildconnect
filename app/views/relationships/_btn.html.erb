<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", destroy_for_user_relationships_path(user_id: user.id), method: :delete, class: "btn btn-info" %>
<% else %>
  <%= link_to "フォローする", create_for_user_relationships_path(user_id: user.id), method: :post, class: "btn btn-success" %>
<% end %>